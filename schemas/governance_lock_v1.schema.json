{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codemonkeys.dev/schemas/governance_lock_v1.schema.json",
  "title": "CodeMonkeys governance.lock v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "lock_version", "generated_at", "codemonkeys_version",
    "constitution_hash", "compiled_rules_hash", "tools", "rules"
  ],
  "properties": {
    "lock_version": { "type": "integer", "const": 1 },
    "generated_at": { "type": "string", "format": "date-time" },
    "codemonkeys_version": { "type": "string", "minLength": 1, "maxLength": 50 },
    "constitution_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
    "compiled_rules_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
    "tools": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/tool" }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5000,
      "items": { "$ref": "#/$defs/compiled_rule" }
    }
  },
  "$defs": {
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "binary_hash"],
      "properties": {
        "version": { "type": "string", "maxLength": 100 },
        "binary_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "config_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "notes": { "type": "string", "maxLength": 1000 }
      }
    },
    "compiled_rule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "version", "severity", "compiled_check_hash"],
      "properties": {
        "id": { "type": "string", "maxLength": 200 },
        "version": { "type": "string", "maxLength": 50 },
        "severity": { "type": "string", "enum": ["info", "warning", "error", "critical"] },
        "owners": {
          "type": "array",
          "items": { "type": "string", "maxLength": 200 },
          "maxItems": 50
        },
        "scope_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "compiled_check_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "source": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "file": { "type": "string", "maxLength": 500 },
            "start_line": { "type": "integer", "minimum": 1 },
            "end_line": { "type": "integer", "minimum": 1 }
          }
        }
      }
    }
  }
}
